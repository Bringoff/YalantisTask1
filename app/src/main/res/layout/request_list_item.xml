<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/request_list_item_height"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/request_type_icon_image_view"
            android:layout_width="@dimen/request_icon_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/request_icon_vertical_margin"
            android:layout_marginTop="@dimen/request_icon_vertical_margin"/>

        <TextView
            android:id="@+id/likes_text_view"
            style="@style/LikeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/divider"
            android:layout_toStartOf="@id/divider"
            tools:text="2"/>

        <View
            android:id="@id/divider"
            android:layout_width="@dimen/divider_size"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/request_divider_right_margin"
            android:layout_marginRight="@dimen/request_divider_right_margin"
            android:layout_toEndOf="@id/request_type_icon_image_view"
            android:layout_toRightOf="@id/request_type_icon_image_view"
            android:background="?android:attr/divider"/>

        <TextView
            android:id="@+id/request_type_text_view"
            style="@style/RequestTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/request_type_icon_image_view"
            android:layout_marginEnd="@dimen/request_title_right_margin"
            android:layout_marginRight="@dimen/request_title_right_margin"
            android:layout_toEndOf="@id/divider"
            android:layout_toRightOf="@id/divider"
            tools:text="Lorem ipsum"/>

        <TextView
            android:id="@+id/request_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/request_type_text_view"
            android:layout_alignStart="@id/request_type_text_view"
            android:layout_below="@id/request_type_text_view"
            android:layout_marginTop="@dimen/request_address_margin_top"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"/>

        <TextView
            android:id="@+id/request_due_date_text_view"
            style="@style/RequestDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title_text_view"
            android:layout_alignStart="@id/title_text_view"
            android:layout_below="@id/request_address_text_view"
            android:layout_toEndOf="@id/divider"
            android:layout_toRightOf="@id/divider"
            tools:text="Feb. 9, 2016"/>

        <TextView
            android:id="@+id/request_days_left_text_view"
            style="@style/RequestDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/request_type_text_view"
            android:layout_alignRight="@id/request_type_text_view"
            android:layout_below="@id/request_address_text_view"
            tools:text="7 days"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>