<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/request_list_item_height"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/request_content_margin">

            <ImageView
                android:id="@+id/request_type_icon_image_view"
                android:layout_width="@dimen/request_icon_width"
                android:layout_height="@dimen/request_icon_height"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_doc"/>

            <TextView
                android:id="@+id/likes_text_view"
                style="@style/LikeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                tools:text="2"/>

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="@dimen/divider_size"
            android:layout_height="match_parent"
            android:background="?android:attr/divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/request_content_margin">

            <TextView
                android:id="@+id/request_type_text_view"
                style="@style/RequestTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Демонтаж інших об’єктів, що входять до переліку малого чогось там"/>

            <TextView
                android:id="@+id/request_address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/request_type_text_view"
                android:layout_marginBottom="@dimen/request_address_vertical_margin"
                android:layout_marginTop="@dimen/request_address_vertical_margin"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"/>

            <TextView
                android:id="@+id/request_due_date_text_view"
                style="@style/RequestDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/request_address_text_view"
                tools:text="Feb. 9, 2016"/>

            <TextView
                android:id="@+id/request_days_left_text_view"
                style="@style/RequestDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/request_address_text_view"
                tools:text="7 days"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>