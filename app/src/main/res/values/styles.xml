<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:divider">@color/colorDivider</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Tag">
        <item name="android:paddingLeft">@dimen/tag_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/tag_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/tag_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/tag_vertical_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/tag_background</item>
    </style>

    <style name="LikeTextView">
        <item name="android:drawableLeft">@drawable/ic_like</item>
        <item name="android:drawablePadding">@dimen/like_drawable_padding</item>
        <item name="android:drawableStart">@drawable/ic_like</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorLike</item>
        <item name="android:textSize">@dimen/like_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RequestTitleTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="RequestDateTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="DrawerTitleTextView">
        <item name="android:textSize">@dimen/drawer_logo_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhiteTransparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/drawer_logo_left_padding</item>
        <item name="android:paddingTop">@dimen/drawer_logo_top_padding</item>
        <item name="android:paddingBottom">@dimen/drawer_logo_bottom_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/tabTextPrimary</item>
        <item name="tabTextColor">@color/tabTextSecondary</item>
    </style>
</resources>
